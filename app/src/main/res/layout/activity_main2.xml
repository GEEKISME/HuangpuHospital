    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:visibility="gone"
        android:id="@+id/content_xrcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_scan"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="0dp"
        android:text="开始扫描"
        android:background="@drawable/btn_common"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_check"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_check"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="资产汇总"
        android:textColor="@color/red"
        android:background="@drawable/btn_common"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_scan"
        app:layout_constraintRight_toLeftOf="@+id/btn_setting"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_setting"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="盘点"
        android:textColor="@color/red"
        android:background="@drawable/btn_common"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_check"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_xrcv"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/alinetwo"
        android:background="@color/color_c5c4c3"
        app:layout_constraintTop_toBottomOf="@+id/titlebar_scan"/>
    <TextView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/tv_assetinfo"
        android:text="当前资产信息"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/alinetwo"
        />
    <View
        android:id="@+id/alinethree"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_c5c4c3"
        app:layout_constraintTop_toBottomOf="@+id/tv_assetinfo"
        />
    <View
        android:id="@+id/alinefour"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_c5c4c3"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_summary"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="当前存放地资产汇总"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/alinefour"
        />
    <com.bin.david.form.core.SmartTable
        app:layout_constraintTop_toBottomOf="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/table_sum"
        />
    <View
        android:id="@+id/alinefive"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_c5c4c3"
        app:layout_constraintTop_toBottomOf="@+id/table_sum"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="当前存放地资产明细"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/alinefive"
        />

    <com.bin.david.form.core.SmartTable
        android:id="@+id/table_detail"
        android:layout_width="0dp"
        android:layout_height="232dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail"
        />


</android.support.constraint.ConstraintLayout>