        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="资产编号  :  "
                android:id="@+id/tv_assetserialnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_assetserialnum"
                android:layout_alignBottom="@+id/tv_assetserialnum"
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_assetserialnum_value"
                android:textColor="@color/black"
                android:text=""
                />
            <TextView
                android:id="@+id/tv_assetname"
                android:layout_below="@+id/tv_assetserialnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资产名称  :  "
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:id="@+id/tv_assetname_value"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/tv_assetname"
                android:layout_toRightOf="@+id/tv_assetname"
                android:layout_marginLeft="4dp"
                />
            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/tv_datepurchase"
                android:layout_width="wrap_content"
                android:text="购置日期  :  "
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assetname_value"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_datepurchase_value"
                android:text=""
                android:textColor="@color/black"
                android:layout_alignBottom="@+id/tv_datepurchase"
                android:layout_toRightOf="@+id/tv_datepurchase"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_placestored"
                android:layout_below="@+id/tv_datepurchase"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="存放位置  :  "
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_placestored_value"
                android:layout_alignBottom="@+id/tv_placestored"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tv_placestored"
                android:layout_marginLeft="4dp"
                android:text=""
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:textIsSelectable="true"
                android:ellipsize="marquee"
                />
