<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_back_pure"
    tools:context=".activity.InventoryingActivity"
    android:paddingTop="6dp"
    >


    <Button
        android:id="@+id/btn_inveSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_common"
        android:text="盘点情况"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.v7.widget.CardView

        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/lightpink"
        app:cardCornerRadius="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_currentdeviceinfo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_assetserialnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资产编号  :  "
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_assetserialnum_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_assetserialnum"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_assetserialnum"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_assetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assetserialnum"
                android:text="资产名称  :  "
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_assetname_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_assetname"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_assetname"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_datepurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assetname_value"
                android:text="购置日期  :  "
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_datepurchase_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_datepurchase"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_datepurchase"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_placestored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_datepurchase"
                android:text="存放位置  :   "
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_placestored_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_placestored"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_placestored"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="20sp"
                />
