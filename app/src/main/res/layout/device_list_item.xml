<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"

    >
    <View
        android:id="@+id/alinesix"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_c5c4c3"

        />
    <RelativeLayout
        android:paddingRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/alinesix"
        android:id="@+id/w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_device_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Small Text"
            android:textColor="@color/black"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/ic_connect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_bluetooth_connected"/>

        <TextView
            android:id="@+id/txt_connect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightarrow"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

</RelativeLayout>
